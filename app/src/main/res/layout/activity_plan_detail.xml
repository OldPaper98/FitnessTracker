<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvDetailPlanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plan Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enthaltene Übungen:"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/exerciseContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>

    <Button
        android:id="@+id/btnEditPlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plan bearbeiten"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <Button
        android:id="@+id/btnDeletePlan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plan löschen"
        android:textColor="#FFFFFF"
        android:backgroundTint="#D32F2F"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zurück zur Übersicht"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</LinearLayout>